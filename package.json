{
  "name": "job-tracker",
  "version": "1.0.0",
  "description": "Job Tracker - Full Stack Application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "bash -c 'cd frontend && npm run lint'",
      "bash -c 'cd frontend && npm run type-check'",
      "bash -c 'cd frontend && npm run build'"
    ],
    "backend/**/*.ts": [
      "bash -c 'cd backend && npm run lint'",
      "bash -c 'cd backend && npm run type-check'",
      "bash -c 'cd backend && npm run build'"
    ]
  }
}
